
  <div class="container">
  <%= area_chart @orders.group_by_day() { |order| order.created_at }.map { |date, orders| [date, orders.size] }, width: "1000px", height: "500px" %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Order Date</th>
          <th>Address</th>
          <th>Total Quantity</th>
          <th>Total Price</th>
          <th>User Name</th>
        </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
       <tr>
        <td><%= @product.title %></td>
        <td><%= order.user.try(:email) %></td>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td><%= order.cart.quantity %></td>
        <td><%= order.cart.sub_total %></td>
        <td><%= order.user.try(:first_name) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
