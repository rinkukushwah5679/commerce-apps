<!DOCTYPE html>
<html>
<head>
  <title>Report PDF</title>
  <%= stylesheet_link_tag "http://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" %>
  <%= javascript_include_tag "http://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" %>
  <%= wicked_pdf_javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
<%= wicked_pdf_javascript_include_tag "https://code.jquery.com/jquery-3.2.1.min.js" %>
<%= wicked_pdf_javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/chartkick/2.2.4/chartkick.min.js" %>
</head>
<body>
  <div class="container">
  <%= line_chart @orders.group_by_day() { |order| order.created_at }.map { |date, orders| [date, orders.size] } %>
  
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Order Date</th>
          <th>Address</th>
          <th>Total Quantity</th>
          <th>Total Price</th>
          <th>User Name</th>
        </tr>
      </thead>
      <tbody>
       <% @orders.each do |order| %>
       <tr>
        <td><%= @product.title %></td>
        <td><%= order.user.try(:email) %></td>
        <td><%= order.created_at %></td>
        <td><%= order.address %></td>
        <td><%= order.cart.quantity %></td>
        <td><%= order.cart.sub_total %></td>
        <td><%= order.user.try(:first_name) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</body>
</html>