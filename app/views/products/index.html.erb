<div class="container">
<%= link_to 'New Product', new_admin_product_path, class:"btn btn-primary", style: "color:white;" %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Price</th>
      <th>Discount price</th>
      <th>Size</th>
      <th>Is active</th>
      <th>Status</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <% if product.image.present? %>
         <td><%= image_tag product.image_url, height: "100", width: "100"%></td>
          <% else %>
          <td></td>
        <% end %>
        <td><%= product.price %></td>
        <td><%= product.discount_price%></td>
        <td><%= product.size %></td>
        <td><%= product.is_active %></td>
        <td><%= product.status %></td>
        <td><%= product.description %></td>
       <td><%= link_to 'Show', polymorphic_path([:admin,  product]), :class=>"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', polymorphic_path([:admin,  product]), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="pagination">
    <%= will_paginate @products %>
  </div>
