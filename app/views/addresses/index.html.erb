<div class ="container">
<%= link_to 'New Address', new_address_path %>
<table class="table">
  <thead>
    <tr>
      <th>Country</th>
      <th>Post code</th>
      <th>Address</th>
      <th>District</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.country %></td>
        <td><%= address.post_code %></td>
        <td><%= address.address %></td>
        <td><%= address.district %></td>
        <td><%= link_to 'Show', address, :class=>"btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_address_path(address), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>



