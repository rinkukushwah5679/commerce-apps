<div class="container">
  <table class="table">
  <thead class="thead-hover">
      <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Price</th>
      <th>Size</th>
      <th>Is active</th>
      <th>Status</th>
      <th>Description</th>
      <th colspan="3"></th>
     </tr>
  </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <% if product.image.present? %>
           <td><%= image_tag product.image_url, height: "100", width: "100"%></td>
            <% else %>
            <td></td>
          <% end %>
          <td><%= product.try(:price) %></td>
          <td><%= product.try(:size)%></td>
          <td><%= product.try(:is_active) %></td>
          <td><%= product.try(:status) %></td>
          <td><%= product.description %></td>
            <td><%= link_to 'Product details', product_details_path(product)%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>





