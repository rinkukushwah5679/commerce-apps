<%= link_to 'New Order', new_order_path %>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cart</th>
      <th>Product</th>
      <th>Price</th>
      <th>Status</th>
      <th>Quantity</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Country</th>
      <th>Address</th>
      <th>Town</th>
      <th>Postal code</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.user_id %></td>
        <td><%= order.cart_id %></td>
        <td><%= order.product_id %></td>
        <td><%= order.price %></td>
        <td><%= order.status %></td>
        <td><%= order.quantity %></td>
        <td><%= order.first_name %></td>
        <td><%= order.last_name %></td>
        <td><%= order.email %></td>
        <td><%= order.phone %></td>
        <td><%= order.country %></td>
        <td><%= order.address %></td>
        <td><%= order.town %></td>
        <td><%= order.postal_code %></td>
        <td><%= order.is_active %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

