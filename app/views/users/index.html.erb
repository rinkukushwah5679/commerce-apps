<div class="container">
 <%#= area_chart User.group_by_day(:created_at).count %>
<%= link_to 'New User',new_admin_user_path,class:"btn btn-primary", style: "color:white;" %>
<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Date</th>
      <th>Image</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
         <td><%= user.created_at %></td>
        <% if user.image.present? %>
         <td><%= image_tag user.image_url, height: "100", width: "100"%></td>
          <% else %>
          <td></td>
        <% end %>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
        <td><%= link_to 'Show',  admin_user_path(user), :class=>"btn btn-info" %></td>
        <td><%= link_to 'Edit',  edit_admin_user_path(user), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

